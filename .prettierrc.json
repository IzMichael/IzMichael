{
    "arrowParens": "always",
    "bracketSameLine": false,
    "bracketSpacing": true,
    "endOfLine": "crlf",
    "printWidth": 120,
    "semi": true,
    "singleAttributePerLine": false,
    "singleQuote": true,
    "svelteAllowShorthand": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "useTabs": false,
    "htmlWhitespaceSensitivity": "ignore",
    "plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss", "@ianvs/prettier-plugin-sort-imports"],
    "pluginSearchDirs": false,
    "importOrder": [
        "<TYPES>",
        "",
        "<THIRD_PARTY_MODULES>",
        "",
        "^(\\$lib)/(.*)",
        "",
        "(.*)/(\\.svelte)$",
        "",
        "^svelte$",
        "^svelte/(.*)$",
        "",
        "^[./]"
    ],
    "importOrderParserPlugins": ["svelte", "typescript", "decorators-legacy"],
    "importOrderTypeScriptVersion": "5.0.0",
    "overrides": [
        {
            "files": "*.svelte",
            "options": {
                "parser": "svelte"
            }
        }
    ]
}
